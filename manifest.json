{
  "manifest_version": 3,
  "name": "Memorize",
  "version": "1.0",
  "description": "Translate selected text and save it.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}