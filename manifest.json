{
  "manifest_version": 3,
  "name": "Memorize",
  "version": "1.0",
  "description": "Translate selected text and save it.",
  "permissions": [
  "storage",
  "scripting",
  "activeTab"
  ],
  "host_permissions": [
  "<all_urls>",
  "*://quizlet.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
  ,
  "content_scripts": [
    {
      "matches": ["*://quizlet.com/create-set*", "*://www.quizlet.com/create-set*"],
      "js": ["src/utils/quizlet_autofill.js"],
      "run_at": "document_idle"
    }
  ]
}